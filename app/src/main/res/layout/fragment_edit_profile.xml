<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:onClick="closeKeyBoard">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintTop_toTopOf="parent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_edit_profile"
            android:layout_width="match_parent"
            android:layout_gravity="left"
            android:layout_height="?attr/actionBarSize"
            android:background="#FFFFFF"
            app:popupTheme="@style/AppTheme.AppBarOverlay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="left"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:text="프로필 변경"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="#4d4d4d" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        app:layout_constraintTop_toBottomOf="@id/appBar_edit_profile">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="109dp"
            android:layout_height="109dp"
            android:background="@drawable/img_circle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="13dp"
            android:paddingTop="17dp"
            android:paddingBottom="17dp">

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:lineSpacingExtra="3sp"
                tools:text="가나다라님"
                android:textColor="#4e4e4e"
                android:textSize="23sp" />

            <Button
                android:id="@+id/btn_change_picture"
                android:layout_width="121dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_round"
                android:lineSpacingExtra="3sp"
                android:text="사진 변경"
                android:textColor="#4e4e4e"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="30dp"
        app:layout_constraintTop_toBottomOf="@id/layout_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="5sp"
                android:text="별명"
                android:textColor="#4e4e4e"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="200dp"
                android:layout_height="36dp"
                android:layout_marginLeft="90dp"
                android:background="@drawable/btn_round"
                android:cursorVisible="false"
                android:maxWidth="150dp"
                android:maxLength="20"
                android:paddingHorizontal="20dp"
                android:singleLine="true" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_duplicate_err"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="6dp"
            android:gravity="end"
            android:lineSpacingExtra="2sp"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginTop="65dp"
            android:background="@drawable/btn_round_tmp"
            android:lineSpacingExtra="6sp"
            android:text="변경완료"
            android:textColor="#ffffff"
            android:textSize="16sp" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_log_out"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_gravity="end"
        android:background="#00ff0000"
        android:lineSpacingExtra="4sp"
        android:text="로그아웃"
        android:textColor="#c2c2c2"
        android:textSize="12sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_bottom"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:lineSpacingExtra="4sp"
            android:text="회원정보를 삭제하시겠어요?"
            android:textColor="#c2c2c2"
            android:textSize="12sp" />

        <!-- 정렬용 더비 View -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_sign_out"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_gravity="end"
            android:background="#00ff0000"
            android:lineSpacingExtra="4sp"
            android:text="@string/sign_out"
            android:textColor="#c2c2c2"
            android:textSize="12sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>