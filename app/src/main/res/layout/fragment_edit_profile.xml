<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="109dp"
            android:layout_height="109dp"
            android:background="@drawable/img_circle" />

        <Button
            android:id="@+id/btn_change_picture"
            android:layout_width="121dp"
            android:layout_height="36dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="57dp"
            android:background="@drawable/btn_round"
            android:lineSpacingExtra="3sp"
            android:text="사진 변경"
            android:textColor="#4e4e4e"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="30dp"
        app:layout_constraintTop_toBottomOf="@id/layout_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:lineSpacingExtra="5sp"
                android:text="별명"
                android:textColor="#4e4e4e"
                android:textSize="16sp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/et_name"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_weight="5"
                android:background="@drawable/btn_round" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_duplicate_err"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="6dp"
            android:gravity="end"
            android:lineSpacingExtra="2sp"
            android:textColor="#f68853"
            android:textSize="10sp"
            tools:text="*중복되는 별명입니다. 다른 닉네임으로 작성해주세요." />


        <Button
            android:id="@+id/btn_save"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginTop="65dp"
            android:background="@drawable/btn_round_tmp"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:lineSpacingExtra="6sp"
            tools:text="변경완료"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="12sp"
            android:textColor="#c2c2c2"
            android:lineSpacingExtra="4sp"
            tools:text="회원정보를 삭제하시겠어요?"/>

        <!-- 정렬용 더비 View -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/btn_sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="12sp"
            android:textColor="#c2c2c2"
            android:lineSpacingExtra="4sp"
            android:gravity="end"
            android:text="@string/sign_out"
            android:onClick="signOut"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>