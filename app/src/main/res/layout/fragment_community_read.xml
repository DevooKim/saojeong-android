<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/communityread_appbarlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="#FFFFFF"
                    app:elevation="0dp"
                    app:popupTheme="@style/AppTheme.PopupOverlay">

                    <TextView
                        android:id="@+id/tool11bar"
                        android:layout_width="wrap_content"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="커뮤니티"
                        android:textColor="#000000" />
                </androidx.appcompat.widget.Toolbar>


            </com.google.android.material.appbar.AppBarLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="23dp"
            android:background="@null"
            >

            <androidx.core.widget.NestedScrollView
                android:id="@+id/testscroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/testLi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:background="@null">

                    <TextView
                        android:id="@+id/tv_community_read_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="30dp"
                        android:textColor="#4e4e4e"
                        android:textSize="19sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginHorizontal="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_community_read_board"
                            android:layout_width="91dp"
                            android:layout_height="21dp" />

                        <TextView
                            android:id="@+id/tv_community_read_date"
                            android:layout_width="106dp"
                            android:layout_height="18dp"/>

                        <TextView
                            android:id="@+id/tv_community_read_name"
                            android:layout_width="106dp"
                            android:layout_height="18dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/tv_community_name_item"
                        android:background="#f1f1f1"/>
                    <TextView
                        android:id="@+id/tv_community_read_contents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="30dp"
                        />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:background="#fdfdfd"
                        android:gravity="center_horizontal">

                        <LinearLayout
                            android:id="@+id/ll_like_up"
                            android:layout_width="138dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/rounded_edittext"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:elevation="1dp">


                            <TextView
                                android:id="@+id/tv_community_like_up"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:drawableLeft="@drawable/likeup"
                                android:text="추천 0"
                                android:textSize="16sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_like_down"
                            android:layout_width="138dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="170dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/rounded_edittext"
                            android:foreground="?attr/selectableItemBackground"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:elevation="1dp">


                            <TextView
                                android:id="@+id/tv_community_like_down"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:drawableLeft="@drawable/likedown"
                                android:text="비추천 0"
                                android:textSize="16sp" />

                        </LinearLayout>


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#fcfcfc"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="25dp"
                                android:layout_marginTop="24dp">
                                <TextView
                                    android:id="@+id/tv_community_read_commentname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:lineSpacingExtra="6sp"
                                    android:textColor="#4e4e4e"
                                    android:textSize="16sp"
                                    android:text="가나다라">
                                </TextView>
                                <TextView
                                    android:id="@+id/tv_create_comment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="13.5sp"
                                    android:textColor="#ff6950"
                                    android:lineSpacingExtra="5.5sp"
                                    android:layout_alignParentRight="true"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:text="작성"
                                    android:textStyle="bold"

                                    ></TextView>
                             </RelativeLayout>
                            <EditText
                                android:id="@+id/tv_comment_edit"
                                android:layout_width="match_parent"
                                android:layout_height="121dp"
                                android:layout_marginHorizontal="25dp"
                                android:layout_marginVertical="14dp"
                                android:background="#ffffff"
                                android:gravity="top"
                                android:hint="내용을 입력하세요"
                                android:inputType="textMultiLine"
                                android:lineSpacingExtra="5sp"
                                android:textSize="13sp" />

                        </LinearLayout>


                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/commentRecycle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="18dp"
                        android:layout_marginTop="18dp">

                    </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>


            </androidx.core.widget.NestedScrollView>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>