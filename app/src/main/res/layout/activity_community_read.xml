<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#FFFFFF"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:elevation="0dp"
                >

                <TextView
                    android:id="@+id/tool11bar"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:text="커뮤니티"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000000"
                    />
            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_community_read_title"
                android:layout_width="269dp"
                android:layout_height="21dp"
                android:text="제목은두껍게"
                android:textSize="19sp"
                android:textColor="#4e4e4e"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_community_read_board"
                    android:layout_width="68dp"
                    android:layout_height="21dp"
                    android:text="자유게시판" />

                <TextView
                    android:id="@+id/tv_community_read_date"
                    android:layout_width="106dp"
                    android:layout_height="18dp"
                    android:text="날짜" />

                <TextView
                    android:id="@+id/tv_community_read_name"
                    android:layout_width="106dp"
                    android:layout_height="18dp"
                    android:text="가나다라" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_community_read_contents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
