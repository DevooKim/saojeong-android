            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="59dp"

                >
                <LinearLayout
                    android:layout_width="138dp"
                    android:layout_height="36dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/rounded_edittext"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/community_upscroll"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="24dp"
                        ></ImageView>
                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:text="추천" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text=" 0"
                        android:textSize="16sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="138dp"
                    android:layout_height="36dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/rounded_edittext"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/community_upscroll"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="24dp"
                        ></ImageView>
                    <TextView
                        android:id="@+id/textView71"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:text="비추천" />

                    <TextView
                        android:id="@+id/textView41"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text=" 0"
                        android:textSize="16sp" />
                </LinearLayout>\

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:background="#fcfcfc"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_community_loginuser_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="가나다라" />

                    <TextView
                        android:id="@+id/tv_community_btn_recomment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_community_loginuser_name"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:text="작성" />

                    <EditText
                        android:id="@+id/tv_community_loginuser_comment"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_below="@+id/tv_community_btn_recomment"
                        android:inputType="textMultiLine"
                        android:background="@null"
                        android:hint="내용을 입력하세요" />

                </RelativeLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/testRecycle"
                android:layout_width="match_parent"
                android:layout_height="400dp">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
    </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>