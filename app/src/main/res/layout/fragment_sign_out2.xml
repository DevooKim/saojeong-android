<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:onClick="closeKeyBoard"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_sign_out2"
            android:layout_width="match_parent"
            android:layout_gravity="left"
            android:layout_height="?attr/actionBarSize"
            android:background="#FFFFFF"
            app:popupTheme="@style/AppTheme.AppBarOverlay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="left"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:text="회원 탈퇴"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="#4d4d4d" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="23dp"
            android:textSize="20sp"
            android:textColor="#4e4e4e"
            android:lineSpacingExtra="-9sp"
            android:textStyle="bold"
            android:text="회원 탈퇴 사유를 적어주시면\n앞으로의 개발에 큰 도움이 됩니다."
            />

        <EditText
            android:id="@+id/et_sign_out"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/square_box"
            android:hint="탈퇴 사유를 적어주세요.(50자 이내)"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_middle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#eeeeee"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:textSize="12sp"
            android:textColor="#4e4e4e"
            android:lineSpacingExtra="4sp"
            android:text="예시) 속도가 느림 / 자주 이용하지 않음 / 찾고자 하는 정보가 없음 / 타 앱의 유사 서비스 이용 "
            />
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="35dp"
            android:textSize="14sp"
            android:textColor="#4e4e4e"
            android:lineSpacingExtra="4sp"
            android:text="사오정을 사용하신 경험이 도움이 되셨길 바랍니다.\n감사합니다."
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_out2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/btn_round_tmp"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="-12sp"
        android:gravity="center"
        android:text="계정 영구 삭제"/>

</LinearLayout>